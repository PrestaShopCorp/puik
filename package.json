{
  "private": true,
  "packageManager": "pnpm@6.24.4",
  "workspaces": [
    "packages/*",
    "docs",
    "play"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "cz": "git-cz",
    "test": "vitest",
    "gen": "bash ./scripts/gc.sh",
    "gen:version": "sucrase-node scripts/gen-version.ts",
    "clean": "pnpm run clean:dist && pnpm run clean -r --stream",
    "clean:dist": "rimraf dist",
    "build": "pnpm run start -C build",
    "build:theme": "pnpm run build -C packages/theme",
    "format": "prettier --write .",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx && pretty-quick --check --branch main",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx && pretty-quick --branch main",
    "docs:dev": "pnpm run -C docs dev",
    "dev": "pnpm run -C playground dev",
    "component": "hygen component new",
    "stub": "pnpm run -C build stub",
    "prepare": "husky install",
    "postinstall": "pnpm gen:version && npx rimraf ./node_modules/@types/react && pnpm stub",
    "preinstall": "npx only-allow pnpm -y"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": "eslint --fix"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "@puik/components": "workspace:*",
    "@puik/hooks": "workspace:*",
    "@puik/locale": "workspace:*",
    "@puik/theme": "workspace:*",
    "@puik/tokens": "workspace:*",
    "@puik/utils": "workspace:*",
    "@vueuse/core": "^8.0.1",
    "lodash": "^4.17.21",
    "puik": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@pnpm/find-workspace-packages": "^3.1.42",
    "@pnpm/logger": "4.0.0",
    "@pnpm/types": "^7.10.0",
    "@puik/build": "workspace:^0.0.1",
    "@storybook/vue3": "^6.4.9",
    "@types/fs-extra": "^9.0.13",
    "@types/gulp": "^4.0.9",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.179",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.18",
    "@types/sass": "^1.43.1",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/test-utils": "2.0.0-rc.16",
    "@vue/tsconfig": "^0.1.3",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-define-config": "^1.2.5",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "8.2.0",
    "fast-glob": "^3.2.11",
    "husky": "^7.0.4",
    "hygen": "^6.1.5",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "sucrase": "^3.20.3",
    "ts-morph": "^14.0.0",
    "type-fest": "^2.12.0",
    "typescript": "^4.6.2",
    "unplugin-vue-define-options": "^0.4.0",
    "vitest": "^0.7.12",
    "vue": "^3.2.31",
    "vue-router": "^4.0.14",
    "vue-tsc": "^0.33.1"
  }
}
