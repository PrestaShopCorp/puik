{
  "name": "@prestashopcorp/puik",
  "version": "0.0.1",
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.mjs",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/es/index.mjs",
        "types": "./dist/es/index.d.ts"
      },
      "require": {
        "default": "./dist/lib/index.js",
        "types": "./dist/lib/index.d.ts"
      }
    },
    "./es": "./dist/es/index.mjs",
    "./lib": "./dist/lib/index.js",
    "./es/*.mjs": "./dist/es/*.mjs",
    "./es/*": "./dist/es/*.mjs",
    "./lib/*.js": "./dist/lib/*.js",
    "./lib/*": "./dist/lib/*.js",
    "./*": "./dist/*"
  },
  "files": [
    "dist",
    "global.d.ts"
  ],
  "scripts": {
    "build:lib": "rimraf dist && rollup -c",
    "gen:esm-dts": "vue-tsc --p tsconfig.build.json --declaration --emitDeclarationOnly --outDir ./dist/es",
    "gen:cjs-dts": "vue-tsc --p tsconfig.build.json --declaration --emitDeclarationOnly --outDir ./dist/lib",
    "build": "pnpm build:lib && pnpm gen:esm-dts && pnpm gen:cjs-dts"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@prestashopcorp/puik-components": "workspace:*",
    "@prestashopcorp/puik-locale": "workspace:*",
    "@prestashopcorp/puik-resolver": "workspace:*",
    "@prestashopcorp/puik-tailwind-preset": "workspace:*",
    "@prestashopcorp/puik-theme": "workspace:*",
    "@prestashopcorp/puik-utils": "workspace:*"
  },
  "devDependencies": {
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "vetur": {
    "tags": "tags.json",
    "attributes": "attributes.json"
  },
  "web-types": "web-types.json"
}
