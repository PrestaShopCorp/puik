{
  "name": "@prestashopcorp/puik-theme",
  "description": "PUIK theme - CSS classes of Prestashop UI Kit.",
  "version": "2.4.0",
  "main": "./dist/index.css",
  "style": "./dist/index.css",
  "unpkg": "./dist/index.css",
  "jsdelivr": "./dist/index.css",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm postcss",
    "postcss": "postcss './src/**/*.postcss' --dir ./dist/ --ext .css --base ./src"
  },
  "publishConfig": {
    "main": "./dist/index.css",
    "exports": {
      "./*.css": "./dist/*.css",
      "./assets/*": "./assets/*"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^6.1.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-extend-rule": "^4.0.0",
    "postcss-mixins": "^11.0.3",
    "postcss-simple-vars": "^7.0.1",
    "postcss-url": "^10.1.3",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.5",
    "tailwindcss": "^3.4.17"
  }
}
