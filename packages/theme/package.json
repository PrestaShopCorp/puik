{
  "name": "@prestashopcorp/puik-theme",
  "description": "PUIK theme - CSS classes of Prestashop UI Kit.",
  "version": "2.6.0",
  "author": "Prestashop",
  "license": "MIT",
  "main": "./dist/index.css",
  "style": "./dist/index.css",
  "unpkg": "./dist/index.css",
  "jsdelivr": "./dist/index.css",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.css",
      "require": "./dist/index.css",
      "default": "./dist/index.css"
    },
    "./assets/*": "./assets/*",
    "./*": "./dist/*.css"
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm postcss",
    "dev": "pnpm clean && pnpm postcss --watch",
    "postcss": "postcss ./src/*.css --dir ./dist"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "cssnano": "^6.1.2",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-copy": "^7.1.0",
    "tailwindcss": "^4.1.7",
    "@tailwindcss/postcss": "^4.1.7"
  }
}
