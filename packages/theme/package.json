{
  "name": "@prestashopcorp/puik-theme",
  "version": "0.0.1",
  "description": "Puik component Theme",
  "style": "./dist/index.css",
  "unpkg": "./dist/index.css",
  "jsdelivr": "./dist/index.css",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm sass && pnpm postcss",
    "sass": "sass --style expanded --no-source-map src/:dist/",
    "postcss": "postcss ./dist/*.css --dir ./dist"
  },
  "publishConfig": {
    "main": "./dist/index.css",
    "exports": {
      "./*.css": "./dist/*.css",
      "./assets/*": "./assets/*"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.15",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.58.3",
    "tailwindcss": "^3.3.5"
  }
}
