@import './common/variables.postcss';

.puik-label {
  @apply puik-body-default-bold;
  @apply text-primary-800;
}

.puik-label--required {
  @apply text-red ml-1;
}

.puik-label--optional {
  @apply puik-body-small;
  @apply text-primary-700 font-normal ml-1;
}

.puik-label--readonly {
  @apply puik-body-small;
  @apply text-primary-700 font-normal ml-1;
}
