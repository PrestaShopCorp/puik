@import './common/variables.postcss';

.puik-progress-stepper {
  @apply flex flex-row;
}

.puik-progress-stepper-step {
  @apply relative;
}

.puik-progress-stepper-step::before {
  @apply bg-primary-400;
  content: '';
  position: absolute;
  display: block;
  top: 14px;
  left: 0;
  width: 100%;
  height: 1px;
}

.puik-progress-stepper-step__button {
  @apply z-10;
}

.puik-progress-stepper-step:first-child::before {
  @apply left-1/2 w-1/2;
}

.puik-progress-stepper-step:last-child::before {
  @apply left-0 w-1/2;
}
