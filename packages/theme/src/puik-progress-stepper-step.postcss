/* @import './common/typography.postcss'; */

.puik-progress-stepper-step {
  @extend .puik-body-small;
  @apply flex flex-col items-center;
  &__button {
    @apply rounded-full p-0 w-7;
    &.puik-button--success {
      @apply text-green-500;
    }
  }
  &__text {
    @apply px-4 pt-1 text-primary-800;
  }
  &__additional-text {
    @apply px-4 text-primary-600;
  }
}
