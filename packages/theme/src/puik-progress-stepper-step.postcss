@import './common/variables.postcss';

.puik-progress-stepper-step {
  @apply puik-body-small;
  @apply flex flex-col items-center;
}

.puik-progress-stepper-step__button {
  @apply rounded-full p-0 w-7;
}

.puik-progress-stepper-step__button.puik-button--success {
  @apply text-green-500;
}

.puik-progress-stepper-step__text {
  @apply px-4 pt-1 text-primary-800;
}

.puik-progress-stepper-step__additional-text {
  @apply px-4 text-primary-600;
}
